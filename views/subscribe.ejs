<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Subscribe Free</title>
  <style>
    body { font-family: Arial, sans-serif; padding: 2rem; }
    button {
      background-color: #528FF0;
      border: none;
      padding: 1rem 2rem;
      color: white;
      font-size: 1.2rem;
      border-radius: 8px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <h1>Subscribe to Premium (Free)</h1>
  <button id="subscribeBtn">Subscribe Now</button>

  <script>
    document.getElementById('subscribeBtn').addEventListener('click', async () => {
      try {
        const res = await fetch('/api/subscription/subscribe-free', {
          method: 'POST',
          credentials: 'include', // Important for cookie-based sessions
          headers: {
            'Content-Type': 'application/json',
          },
        });
        const data = await res.json();

        if (data.success) {
          alert('ðŸŽ‰ Subscription activated!');
          window.location.href = '/dashboard';
        } else {
          alert('Subscription failed: ' + data.message);
        }
      } catch (err) {
        alert('Error: ' + err.message);
      }
    });
  </script>
</body>
</html>
